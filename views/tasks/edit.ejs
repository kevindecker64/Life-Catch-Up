<%- include('../partials/header2') %>

<section>
  <form action="/tasks/<%= task._id%>?_method=PUT" method="POST">
    <label>Task Name:</label>
    <input type="text" name="name" value="<%= task.name %>" />
    <label>Type:</label>
    <select name="type">
      <option value="<%= task.type %>"><%= task.type %></option>
      <option value="Chore">Chore</option>
      <option value="Hobby">Hobby</option>
    </select>
    <label>Category:</label>
    <input type="text" name="category" value="<%= task.category %>" />
    <label>Priority:</label>
    <input
      type="number"
      name="priority"
      min="1"
      max="5"
      value="<%= task.priority %>"
    />
    <label>Difficulty:</label>
    <input
      type="number"
      name="difficulty"
      min="1"
      max="5"
      value="<%= task.difficulty %>"
    />
    <label>Length:</label>
    <input type="text" name="length" value="<%= task.length %>" />
    <label>Your Name:</label>
    <input type="text" name="people" value="<%= task.people %>" />
    <input type="submit" value="UPDATE TASK" />
  </form>
</section>

<%- include('../partials/footer') %>
